@model StudentsTechFeeEvalApp.ViewModels.RequestsInfoData

@{
    ViewBag.Title = "Index";
}

<h2>List of Requests</h2>

<p>
    @Html.ActionLink("Create New Request ", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Item Description
        </th>
        <th>
            Cost of Item
        </th>
        <th>
            Justification for Item
        </th>
        <th>
            CommitteeMember
        </th>
        <th>
            CommitteeMember Vote
        </th>
        <th>
            CommitteeMember Comment
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.CommitteeMemberReviews)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Request.ItemDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Request.ItemCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Request.Justification)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ApplicationUser.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vote)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comment)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Committee Review", "CommitteeReview", new { id = item.Id }) |
            </td>
        </tr>
    }

</table>
