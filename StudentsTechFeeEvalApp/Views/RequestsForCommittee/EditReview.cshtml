@model StudentsTechFeeEvalApp.Models.Model_Classes.CommitteeMemberReview
@{
    ViewBag.Title = "Committee Review Request";
}

<h2>Committee Member Review on Request</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()



    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            <label class="control-label col-md-3">Select an option to vote:</label>
            <div class="col-md-7">
                <div class="radio">
                    <label>@Html.RadioButtonFor(model => model.Vote, "Yes", new { htmlAttributes = new { @class = "form-control", id = "yes" } })Yes</label>
                </div>
                <div class="radio">
                    <label>@Html.RadioButtonFor(model => model.Vote, "Yes, with Reservations", new { htmlAttributes = new { @class = "form-control", id = "yeswithr" } }) Yes, with Reservations</label>
                </div>
                <div class="radio">
                    <label>@Html.RadioButtonFor(model => model.Vote, "Need more Information", new { htmlAttributes = new { @class = "form-control", id = "needmoreinfo" } })Need more Information </label>
                </div>
                <div class="radio">
                    <label>@Html.RadioButtonFor(model => model.Vote, "No", new { htmlAttributes = new { @class = "form-control", id = "no" } })No </label>
                </div>
                @Html.ValidationMessageFor(model => model.Vote, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group" id="comment">
            <label class="control-label col-md-3">Comment: </label>
            <div class="col-md-7">
                @Html.EditorFor(model => model.Comment, new { htmlAttributes = new { @class = "form-control", @Style = "height:150px; width:400px;" } })
                @Html.ValidationMessageFor(model => model.Comment, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-4 col-md-10">
                <input type="submit" value="Submit Vote" class="btn btn-default" />
            </div>
        </div>
    </div>
                    }
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}









