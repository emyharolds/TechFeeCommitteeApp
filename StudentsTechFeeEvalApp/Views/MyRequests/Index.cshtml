@model StudentsTechFeeEvalApp.ViewModels.RequestsInfoData

@{
    ViewBag.Title = "My Requests";
}

<h2>My Requests List</h2>
<p class="text-success">@ViewBag.StatusMessage</p>
<p>
    @if (ViewBag.CurrentPeriod == 2)
    {
        @Html.ActionLink("Create New Request ", "Create")
    }
    
</p>
<p>@ViewBag.Requests</p>
<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th scope="col">
                Item Description
            </th>
            <th scope="col">
                Cost of Item
            </th>
            <th scope="col">
                Justification for Item
            </th>
            <th scope="col">
                No of Students Impacted
            </th>
            <th scope="col">
                Classes Supported
            </th>
            <th scope="col">
                Current Status
            </th>
            <th></th>
        </tr>
    </thead>
    @foreach (var item in Model.Requests)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ItemDescription)
            </td>
            <td>
                $@Html.DisplayFor(modelItem => item.ItemCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Justification)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoOfStudentsImpacted)
            </td>
            <td>
                @foreach (var aClass in item.StudentClasses)
                {
                    @aClass.Id @: @aClass.Name <br />
                    }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status.StatusName)
            </td>
            <td>
                @if (ViewBag.CurrentPeriod == 2)
                {
                    @Html.ActionLink("Edit ", "Edit", new { id = item.Id })<label> | </label>
                    @Html.ActionLink("Details ", "Details", new { id = item.Id })<label> | </label>
                    @Html.ActionLink("Delete ", "Delete", new { id = item.Id })
                }
            </td>

        </tr>
    }

</table>

