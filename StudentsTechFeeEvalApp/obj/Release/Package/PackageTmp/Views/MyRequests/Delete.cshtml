@model StudentsTechFeeEvalApp.Models.Model_Classes.Request

@{
    ViewBag.Title = "Delete";
}

<h2>Delete Request</h2>

<h3>Are you sure you want to delete this request?</h3>
<div>
    <h4>Request Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Description of Item
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ItemDescription)
        </dd>

        <dt>
            Item Usage:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ItemUsage)
        </dd>

        <dt>
            Cost of Item (with Shipping):
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ItemCost)
        </dd>

        <dt>
            Justification for Item:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Justification)
        </dd>

        <dt>
            Number of Students Impacted:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NoOfStudentsImpacted)
        </dd>

        <dt>
            Classes Supported:
        </dt>

        <dd>
            @{ foreach (var item in Model.StudentClasses)
                {
                    @item.Name <br />
                }}
        </dd>

        <dt>
            Submitted By:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ApplicationUser.FullName)
        </dd>

        <dt>
            Department
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Department.Name)
        </dd>

        <dt>
            Date of Submission
        </dt>

        <dd>
            @Html.DisplayFor(model => model.DateOfSubmission)
        </dd>

    </dl>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index", "MyRequests", null)
        </div>
    }
</div>


